pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']],
                         userRemoteConfigs: [[url: 'https://github.com/mahmoudbelka2022/AdamMahWeb.git']]])
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Cucumber') {
            steps {
                sh 'mvn verify'
            }
            post {
                always {
                    cucumber buildStatus: 'UNSTABLE', jsonReportDirectory: 'target/json', failedStepsNumber: 10
                    archiveArtifacts artifacts: 'target/*.html,target/*.json',fileIncludePattern: '**/*', onlyIfSuccessful: true
                }
            }
        }
    }
}
