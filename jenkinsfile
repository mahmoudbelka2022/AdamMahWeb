pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Cucumber') {
            steps {
                sh 'mvn verify'
            }
            post {
                always {
                    cucumber buildStatus: 'UNSTABLE', jsonReportDirectory: 'target/cucumber/json', failedStepsNumber: 10
                }
            }
        }
    }
}
